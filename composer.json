{
    "name": "vehikl/flip",
    "type": "library",
    "description": "A Feature Toggle implementation",
    "keywords": [
        "vehikl",
        "feature",
        "feature toggle"
    ],
    "homepage": "https://github.com/vehikl/flip",
    "license": "MIT",
    "authors": [
        {
            "name": "Colin DeCarlo",
            "email": "c.decarlo@vehikl.com",
            "homepage": "https://github.com/colindecarlo",
            "role": "Idea Man"
        },
        {
            "name": "Brad Brothers",
            "email": "b.brothers@vehikl.com",
            "homepage": "https://github.com/bbrothers",
            "role": "The Brains"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Vehikl\\Flip\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vehikl\\Flip\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=./phpcs.xml",
        "fix-style": "phpcbf --standard=./phpcs.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
